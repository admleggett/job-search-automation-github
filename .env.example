# GitHub Integration Environment Variables
# Copy this file to .env and fill in your values

# Required: GitHub Personal Access Token
# Get one from: https://github.com/settings/tokens
# Needs 'repo' scope for creating issues
GITHUB_TOKEN=ghp_your_token_here

# Optional: Repository settings for local testing
# Default: your-username/job-search-repo
GITHUB_OWNER=your-username
GITHUB_REPO=job-search-repo

# Optional: Test repository for integration tests
# Format: owner/repo
# Only needed if you want to run real API integration tests
TEST_REPO=your-username/test-repo

# Optional: Enable debug logging (true/false)
DEBUG_LOGGING=true
